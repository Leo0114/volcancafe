---
import Tarjeta from "@components/layout/Tarjeta.astro";

import { hoteles } from "@data/hoteles";
---

<div class="px-8 mx-auto animate-fade-up animate-once animate-ease-in py-12">
  <div class="text-center pb-10">
    <h1
      class="transition-colors duration-200 font-bold text-4xl text-zinc-800 dark:text-zinc-300"
    >
      Hoteles
    </h1>
    <hr
    class="my-6 h-px border-t-0 bg-transparent bg-gradient-to-r from-transparent via-lime-800 to-transparent opacity-25 dark:opacity-100"
  />
  </div>
  <div class="container mx-auto">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-y-12 gap-x-8"
    >
      {
        hoteles.map((hotel) => (
          <Tarjeta
            nombre={hotel.nombre}
            lugar={hotel.ubicacion}
            precio={hotel.precio}
            huespedes={hotel.huespedes}
            href={hotel.imagen}
          />
        ))
      }
    </div>
  </div>
</div>
