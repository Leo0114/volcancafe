---
import SocialIcons from "@components/layout/SocialIcons.astro";

const menuitems = [
  {
    title: "Cabañas",
    path: "/volcancafe/cabanas",
  },
  {
    title: "Casas Descanso",
    path: "/volcancafe/descanso",
  },
  {
    title: "Villas",
    path: "/volcancafe/villas",
  },
  {
    title: "Hoteles",
    path: "/volcancafe/hoteles",
  },

  {
    title: "Tours",
    path: "/volcancafe/tours",
  },
  { title: "Bodas", path: "/volcancafe/bodas" },

  {
    title: "Contacto",
    path: "/volcancafe/contacto",
  },
];
---

<footer
  class="w-full bg-[radial-gradient(ellipse_at_bottom,_var(--tw-gradient-stops))] from-lime-900 via-zinc-950 to-zinc-900"
>
  <div class="container px-6 py-4 mx-auto">
    <div class="flex flex-col items-center justify-center text-center">
      <a href="/volcancafe/" class="text-4xl text-white font-thin">
        Volcán & Caféencia Turística</a
      >

      <ul
        class="flex flex-wrap justify-center mt-6 -mx-4 text-white dark:text-gray-300"
      >
        {
          menuitems.map((item) => (
            <li class="w-full md:w-auto md:mx-4 mb-6">
              <a
                class="block text-sm md:inline-block md:text-base"
                href={item.path}
                aria-label={item.title}
              >
                {item.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <hr class="my-6 border-gray-500 md:my-10" />

    <div class="flex flex-col items-center sm:flex-row sm:justify-between">
      <p class="text-sm text-gray-100 dark:text-gray-300">
        © Copyright 2023 <a
          target="_blank"
          href="https://www.instagram.com/leonel0114/"
          class="text-white hover:text-lime-500">Leo</a
        >
      </p>

      <div class="flex space-x-4">
        <SocialIcons iconColor="DarkSeaGreen" />
      </div>
    </div>
  </div>
</footer>
