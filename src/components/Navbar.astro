---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
//import ThemeToggle from "./themetoggle.tsx";

const menuitems = [
  {
    title: "Cabañas",
    path: "/volcancafe/cabanas",
  },
  {
    title: "Casas Descanso",
    path: "/volcancafe/descanso",
  },
  {
    title: "Villas",
    path: "/volcancafe/villas",
  },
  {
    title: "Hoteles",
    path: "/volcancafe/hoteles",
  },

  {
    title: "Tours",
    path: "/volcancafe/tours",
  },
  { title: "Bodas", path: "/volcancafe/bodas" },

  {
    title: "Contacto",
    path: "/volcancafe/contacto",
  },
];
---

<div class="p-4 shadow-md bg-stone-300">
  <div class="max-w-screen-xl mx-auto">
    <header class="flex flex-col lg:flex-row justify-between items-center my-5">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href="/volcancafe/" class="text-3xl font-thin text-stone-800">
            Volcán & Caféencia Turística
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {
              menuitems.map((item) => (
                <>
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-stone-800 hover:underline text-lg font-thin hover:scale-105 duration-300"
                    >
                      {item.title}
                    </a>
                  </li>
                </>
              ))
            }
          </ul>
        </MenuItems>
      </Astronav>
      <!-- <ThemeToggle />-->
    </header>
  </div>
</div>

