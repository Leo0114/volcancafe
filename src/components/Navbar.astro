---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import ThemeToggle from "@components/ThemeToggle";
import { Image } from "astro:assets";
import NavImg from "@assets/navImg.webp";

const menuitems = [
  {
    title: "Cabañas",
    path: "/volcancafe/cabanas",
  },
  {
    title: "Descanso",
    path: "/volcancafe/descanso",
  },
  {
    title: "Villas",
    path: "/volcancafe/villas",
  },
  {
    title: "Hoteles",
    path: "/volcancafe/hoteles",
  },

  {
    title: "Tours",
    path: "/volcancafe/tours",
  },
  { title: "Bodas", path: "/volcancafe/bodas" },

  {
    title: "Contacto",
    path: "/volcancafe/contacto",
  },
  {
    title: "L",
    path: "/volcancafe/Show3",
  },
];
---

<div
  class="shadow-xl text-white h-auto font-bold sticky top-0 z-50 bg-gradient-to-r from-zinc-900 via-lime-950 to-zinc-900"
>
  <div class="max-w-[1400px] mx-auto">
    <header class="flex flex-col lg:flex-row justify-between items-center">
      <Astronav>
        <div
          class="flex w-full lg:w-auto items-center justify-between lg:justify-between"
        >
          <a
            href="/volcancafe/"
            class="text-2xl flex items-center"
            aria-label="Index Volcán y café - Agencia Turística"
          >
            <Image
              alt="Navbar Logo"
              quality="low"
              format="avif"
              src={NavImg}
              class="xl:w-1/5 md:block flex sm:w-1/6 sm:mx-auto xl:mx-0"
            />
            <span class="sm:hidden md:inline hidden"
              >Volcán & Café - Agencia Turística</span
            >
          </a>

          <div class="block lg:hidden px-4">
            <MenuIcon class="w-4 h-4" />
          </div>
        </div>
        <MenuItems
          class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 backdrop-brightness-100"
        >
          <div class="flex flex-col lg:flex-row lg:gap-2">
            {
              menuitems.map((item) => (
                <ul>
                  <li class="flex lg:px-4 lg:py-10 p-2 px-4 ">
                    <a
                      href={item.path}
                      class=" hover:underline text-lg  hover:scale-110 duration-300"
                      aria-label={item.title}
                    >
                      {item.title}
                    </a>
                  </li>
                </ul>
              ))
            }
            <ThemeToggle client:load />
          </div>
        </MenuItems>
      </Astronav>
    </header>
  </div>
</div>
