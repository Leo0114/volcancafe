---
import Tarjeta from "@components/layout/Tarjeta.astro";

import jsonCabana from "@data/cabana.json";
---

<div class="container mx-auto px-4 max-w-[1400px] py-8">
    <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4"
    >
        {
            jsonCabana.cabanas.map((cabana) => (
                <Tarjeta
                    nombre={cabana.nombre}
                    lugar={cabana.ubicacion}
                    precio={cabana.precio}
                    huespedes={cabana.huespedes}
                    href={cabana.img}
                />
            ))
        }
    </div>
</div>
