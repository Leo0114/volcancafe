---
import ToursTarjeta from "@components/tours/ToursTarjeta.astro";

import { tours } from "@data/tours";
---

<div class="container px-6 mx-auto py-16">
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4"
  >
    {
      tours.map((tour) => (
        <ToursTarjeta
          nombre={tour.nombre}
          distancia={tour.distancia}
          precio={tour.precio}
          duracion={tour.duracion}
          href={tour.imagen}
        />
      ))
    }
  </div>
</div>
