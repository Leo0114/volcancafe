---
import ProcesarImg from "@components/ProcesarImg.astro";
import BotonAgenda from "@components/layout/BotonAgenda.astro";
import images from "@data/imagesA";
---

<section class="container mt-8 mx-auto md:px-6">
  <div class="grid lg:grid-cols-2 items-center justify-items-center gap-5">
    <div class="order-2 lg:order-1 flex flex-col justify-center items-center">
      <p class="text-4xl font-bold md:text-7xl">Vuelos al voncán</p>
      <p class="text-4xl font-bold md:text-7xl">Agenda tu paseo</p>
      <p class="mt-4 text-sm md:text-lg underline text-lime-600">
        <a href="tel:+523122707569">Agenda tu paseo aquí</a>
      </p>

      <BotonAgenda
        link="/volcancafe/contacto"
        tag="Contacto directo"
        clases=" md:text-2xl  px-5 mt-10 hover:shadow-xl border dark:border-zinc-200 rounded-lg p-4 text-zinc-50 bg-zinc-800 hover:opacity-90 text-xl font-semibold hover:bg-zinc-100 hover:text-zinc-800 hover:border-zinc-800"
      />
    </div>
    <div class="order-1 lg:order-2 lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
      <ProcesarImg
        imgClass="h-80 w-80 object-cover lg:h-[36rem] lg:w-[32rem] rounded-xl shadow-lg  aspect-square"
        alt="hongo img"
        img={images.heli}
        calida="mid"
      />
    </div>
  </div>
</section>
