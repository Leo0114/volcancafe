---
import CustomImg from "@components/layout/CustomImg.astro";
import CustomData from "@components/layout/CustomData.astro";
import BotonAgenda from "@components/layout/BotonAgenda.astro";
---

<div class="max-w-[1400px] m-auto py-8 px-4 grid lg:grid-cols-2 gap-4">
  <div class="flex flex-col h-full justify-center">
    <h3 class="text-5xl md:text-6xl font-bold">Planea tu próximo viaje</h3>
    <CustomData
      para="Contamos con las mejores casas de descanso con instalaciones seguras y privacidad. Un clima de montaña súper agradable y algunas con albercas climatizadas. "
      line="Ponte en contacto con nosotros para verificar disponibilidad y cotizar cualquiera de nuestros servicios."
    />

    <div>
      <BotonAgenda link="/volcancafe/contacto" tag="Reserva aquí" />
    </div>
  </div>
  <CustomImg
    img1="https://res.cloudinary.com/diiabesnk/image/upload/v1689057326/dtpf6t6biksqhts3r9pe.jpg"
    img2="https://res.cloudinary.com/diiabesnk/image/upload/v1689057324/qvqjmxtae0rtbg4hjzi8.jpg"
    img3="https://res.cloudinary.com/diiabesnk/image/upload/v1689057319/pbzafefnmujdjqmnr0ar.jpg"
    img4="https://res.cloudinary.com/diiabesnk/image/upload/v1689057328/urgyupbvdnz8m1mz9qzn.jpg"
    img5="https://res.cloudinary.com/diiabesnk/image/upload/v1689057317/ibvn4vdmpkmdvmylr904.jpg"
  />
</div>
