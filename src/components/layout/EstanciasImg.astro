---
import ProcesarImg from "@components/ProcesarImg.astro";

interface Props {
  src: ImageMetadata;
  alt?: string;
  content: string;
  href: string;
}
const { src, content, href } = Astro.props;
---

<div
  class="relative flex w-96 flex-col rounded-xl bg-zinc-100 bg-clip-border text-zinc-800 shadow-lg dark:bg-zinc-700 dark:text-zinc-200 border-2 border-zinc-300 dark:border-none"
>
  <div
    class="relative mx-4 mt-4 h-96 overflow-hidden rounded-xl bg-zinc-100 bg-clip-border text-zinc-800 group"
  >
    <ProcesarImg
      img={src}
      imgClass="h-full w-full object-cover shadow-sm  object-cover transition group-hover:scale-125 duration-500"
      calida="mid"
      alt="Estancias"
    />
    <div
    class="to-bg-black-10 absolute inset-0 h-full w-full bg-gradient-to-tr from-transparent via-transparent to-black/60"
  >
  </div>
  </div>
  <div class="p-4">
    <div class="flex items-center justify-center space-x-2">
      <p class="block font-sans font-medium leading-relaxed text-2xl">
        {content}
      </p>
      <div>
        <a
          href={href}
          class="w-6 h-6 text-zinc-900 dark:text-zinc-200 leading-relaxed block antialiased transform transition duration-500 hover:scale-110"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="hover:font-bold dark:text-zinc-50"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
            ></path>
          </svg></a
        >
      </div>
    </div>
  </div>
</div>
