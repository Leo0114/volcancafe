---
export interface Props {
  nombre?: string;
  lugar?: string;
  precio?: string;
  huespedes?: number;
  href?: string;
}

const { precio, nombre, lugar, href, huespedes } = Astro.props;
---

<div
  class="max-w-[1400px] overflow-hidden bg-zinc-200 rounded-lg shadow-lg hover:scale-105 duration-200 mb-2 justify-center dark:bg-zinc-800"
>
  <img class="object-cover w-full h-48 rounded-t-lg" src={href} alt="Cover" />
  <div class="px-4 py-2">
    <h1 class="text-xl font-bold text-zinc-900 uppercase dark:text-zinc-200">
      {nombre}
    </h1>
    <p class="mt-1 text-sm text-zinc-700 dark:text-zinc-200">
      {lugar}
    </p>
    <p class="mt-1 text-sm text-zinc-700 dark:text-zinc-200">
      {huespedes} huéspedes
    </p>
  </div>
  <div
    class="flex items-center justify-between px-4 py-2 bg-zinc-900 dark:bg-zinc-600"
  >
    <h1 class="text-lg font-bold text-zinc-200 dark:text-zinc-200">
      ${precio}
    </h1>
    <button
      class="px-2 py-1 text-xs font-semibold text-zinc-900 uppercase transition-colors duration-300 transform bg-zinc-50 rounded hover:bg-zinc-200 focus:bg-zinc-400 focus:outline-none dark:bg-zinc-800 dark:text-zinc-200"
      >Más detalles</button
    >
  </div>
</div>
