---
import CustomImg from "@components/layout/CustomImg.astro";
import CustomData from "@components/layout/CustomData.astro";
---

<div class="max-w-[1400px] m-auto py-8 px-4 grid lg:grid-cols-2 gap-4">
  <div class="flex flex-col h-full justify-center">
    <h3 class="text-5xl md:text-6xl font-bold">Planea tu próximo destino</h3>
    <CustomData
      para="Hospédate en nuestras habitaciones totalmente higiénicas, contamos con una gran variedad  de conceptos que te permitirán a ti y a tu familia tener una estancia placentera en cualquiera de los hospedajes que brindamos. "
      line="Algunos de los servicios principales son: Limpieza diario, Restaurante, Alberca al aire libre, Desayuno, Terraza."
    />

    <div>
      <button class="border-black mr-4 hover:shadow-xl border rounded-lg p-2">
        <a href="/volcancafe/contacto">Reserva aquí</a>
      </button>
    </div>
  </div>

  <CustomImg
    img1="https://res.cloudinary.com/diiabesnk/image/upload/v1689024224/ksjpgpstiwwvcxcky6wd.jpg"
    img2="https://res.cloudinary.com/diiabesnk/image/upload/v1689024197/ynzvgt14hnyzjmuujvjs.jpg"
    img3="https://res.cloudinary.com/diiabesnk/image/upload/v1689024204/ehzmidj0aiwhwtaebbsk.jpg"
    img4="https://res.cloudinary.com/diiabesnk/image/upload/v1689024195/t6zmgwa6iaec7hqprih0.jpg"
    img5="https://res.cloudinary.com/diiabesnk/image/upload/v1689056553/mqpbyp0ggkgxomn8jmls.jpg"
  />
</div>
