---
import { Image } from "astro:assets";

interface Props {
  img: ImageMetadata;
  calida?: string;
  alt: string;
  imgClass?: string;
  link?: string;
}
const { img, calida = "high", alt, imgClass, link } = Astro.props;
---

<Image
  src={img}
  quality={calida}
  loading="lazy"
  format="avif"
  alt={alt}
  class={imgClass}
  href={link}
/>
