---
import Contenido from "@components/layout/Contenido.astro";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import Ubicacion from "@components/contacto/Ubicacion.astro";
import Intro from "@components/layout/Intro.astro";
import Banner from "@components/layout/Banner.astro";
import Plan from "@components/layout/Plan.astro";
import fondo from "@assets/img/navb1.jpg";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/volcancafe/coffe.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-50">
    <Navbar img={fondo} />
    <Intro />
    <Plan />
    <Banner />
    <Contenido />
    <Ubicacion />
    <Footer />
    <slot />
  </body>
</html>
